doctype html 
html(lang="en")
    head 
        title Errand Author Form 
        link(rel='stylesheet', href='/static/style.css')
    body 
        .app 
            form(action="/form" method="post")
                label.form-label(for="name") Name: 
                input.form-input(type="text", name="name" placeholder="Enter a name here" value=submission.name)
                label.form-label(for="description") Text: 
                input.form-input(type="text", name="description" placeholder="Enter text here" value=submission.description)
                input(type="submit")